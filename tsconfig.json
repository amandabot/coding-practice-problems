{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "inlineSourceMap": true,
    "declaration": false,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "outDir": "tmp",
    "lib": [
      "es2020",
      "dom"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
